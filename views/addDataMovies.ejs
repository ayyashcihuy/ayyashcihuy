<%- include("partial/header", { title: "Add Movies"}) %>
<div class="container mt-4">
  <h1 align='center'>Add Movies</h1>
  <form class= "form" action="/movies/add" method="POST">
    <div class="mb-3">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Released Year</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="released_year">
      </div>
      <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Genre</label>
      <select class="form-select" aria-label="Default select example" name="genre">
        <option value="">Select</option>
        <option value="animation">Animation</option>
        <option value="comedy">Comedy</option>
        <option value="drama">Drama</option>
        <option value="horor">Horor</option>
        <option value="religious">Religious</option>
        <option value="thriller">Thriller</option>
      </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
  </div>  
<%- include("partial/footer") %>